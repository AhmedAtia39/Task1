<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_type_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:src="@drawable/type_car" />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="ابي اروح الهايبر وما عندي سياره ممكن حد يوديني"
            android:textColor="#000000"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/image_accepted_time"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/my_list_help_accepted_time" />

            <TextView
                android:id="@+id/txt_accepted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" منذ ساعه "
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/image_info_attendance"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/my_list_help_accepted_info_attendance" />

            <TextView
                android:id="@+id/txt_info_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" رجال "
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/image_info_help"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/my_list_help_accepted_info_help_type" />

            <TextView
                android:id="@+id/txt_info_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" فزعه سياره "
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/image_acceped_accept"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/my_list_help_accepted_accept" />

            <TextView
                android:id="@+id/txt_acceped_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" فزعوا 2 "
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/style"
            android:text=" الغاء "
            android:textColor="#A32389" />
    </LinearLayout>

</LinearLayout>